<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewWindowElement" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">5dp</item>
        <item name="contentPaddingBottom">10dp</item>
        <item name="contentPaddingTop">10dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>


    <style name="ListElement" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="BlueButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorBlue</item>
        <item name="colorControlHighlight">@color/colorBlueHighlight</item>
    </style>

    <style name="OrangeButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorOrange</item>
        <item name="colorControlHighlight">@color/colorOrangeHighlight</item>
    </style>


</resources>